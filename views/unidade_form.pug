extends layout_page

block content
  .row.justify-content-md-center.mt-4
    .col
      h1.mb-3 Unidade - Incluir
      if success
        .alert.alert-success
          strong Sucesso!
          |  A unidade foi registrada com sucesso
  form(method="post")
    .row.mt-3.p-3.bg-faded.rounded
        - var code = '';
        .col
          .form-group.row
            - code = 'nome';
            label.col-sm-2.col-form-label.text-right(for=code) Nome
            .col-sm-10
              input(type="text" class="form-control" id=code name=code placeholder="Ex: Apartamento 203")
          .form-group.row
            - code = 'condominioUidpk';
            label.col-sm-2.col-form-label.text-right(for=code) Condomínio
            .col-sm-10
              select(class="form-control" id=code name=code)
                each c in condominios
                  option(value=c.uidpk)= c.nome
          .form-group.row
            label.col-sm-2.col-form-label.text-right Tipo
            - code = 'tipo';
            .col-sm-10
              .form-check.form-check-inline
                label.form-check-label
                  input(type="radio" class="form-check-input" name=code value="residencia")
                  |  Residência
              .form-check.form-check-inline
                label.form-check-label
                  input(type="radio" class="form-check-input" name=code value="area_comum")
                  |  Área Comum
          .form-group.row
            - code = 'percentualRateio';
            label.col-sm-2.col-form-label.text-right Rateio
            .col-sm-3.input-group
              input(type="number" class="form-control " id=code name=code placeholder="Ex: 120" value="100")
              span.input-group-addon %
          a(href="/unidade" class="btn btn-secondary mr-2") Voltar
          button(type="submit" class="btn btn-primary")
            i.fa.fa-floppy-o.mr-2
            | Salvar